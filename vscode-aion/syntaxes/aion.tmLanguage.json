{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "AION",
    "scopeName": "source.aion",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#declarations"
        },
        {
            "include": "#reasoning"
        },
        {
            "include": "#memory-types"
        },
        {
            "include": "#events"
        },
        {
            "include": "#actions"
        },
        {
            "include": "#control"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#identifiers"
        }
    ],
    "repository": {
        "comments": {
            "name": "comment.line.number-sign.aion",
            "match": "#.*$"
        },
        "strings": {
            "name": "string.quoted.double.aion",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.aion",
                    "match": "\\\\."
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.aion",
            "match": "-?\\b\\d+(\\.\\d+)?\\b"
        },
        "declarations": {
            "patterns": [
                {
                    "name": "storage.type.agent.aion",
                    "match": "\\b(agent)\\b"
                },
                {
                    "name": "storage.type.model.aion",
                    "match": "\\b(model)\\b"
                },
                {
                    "name": "storage.type.tool.aion",
                    "match": "\\b(tool)\\b"
                },
                {
                    "name": "storage.type.policy.aion",
                    "match": "\\b(policy)\\b"
                },
                {
                    "name": "storage.type.memory.aion",
                    "match": "\\b(memory)\\b"
                },
                {
                    "name": "keyword.other.goal.aion",
                    "match": "\\b(goal)\\b"
                }
            ]
        },
        "reasoning": {
            "patterns": [
                {
                    "name": "keyword.control.reasoning.aion",
                    "match": "\\b(think|analyze|reflect|decide)\\b"
                }
            ]
        },
        "memory-types": {
            "patterns": [
                {
                    "name": "support.type.memory.aion",
                    "match": "\\b(working|episodic|long_term|semantic)\\b"
                }
            ]
        },
        "events": {
            "patterns": [
                {
                    "name": "keyword.control.event.aion",
                    "match": "\\b(on)\\b"
                },
                {
                    "name": "support.type.event.aion",
                    "match": "\\b(input|error|timeout|complete)\\b"
                }
            ]
        },
        "actions": {
            "patterns": [
                {
                    "name": "keyword.control.action.aion",
                    "match": "\\b(use|respond|emit|store|recall)\\b"
                },
                {
                    "name": "keyword.other.aion",
                    "match": "\\b(from|where|in|times)\\b"
                }
            ]
        },
        "control": {
            "patterns": [
                {
                    "name": "keyword.control.conditional.aion",
                    "match": "\\b(if|else|when)\\b"
                },
                {
                    "name": "keyword.control.loop.aion",
                    "match": "\\b(repeat)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.logical.aion",
                    "match": "\\b(and|or|not)\\b"
                },
                {
                    "name": "keyword.operator.comparison.aion",
                    "match": "(==|!=|<=|>=|<|>)"
                },
                {
                    "name": "keyword.operator.assignment.aion",
                    "match": "="
                },
                {
                    "name": "keyword.operator.arithmetic.aion",
                    "match": "[+\\-*/]"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.aion",
                    "match": "\\b(true|false)\\b"
                },
                {
                    "name": "constant.language.null.aion",
                    "match": "\\b(null)\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.other.provider.aion",
                    "match": "\\b(provider|name|trust|cost|retention|type|capacity|max_tokens|allow_web)\\b"
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "entity.name.function.aion",
                    "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
                },
                {
                    "name": "variable.other.aion",
                    "match": "\\b([a-z_][a-zA-Z0-9_]*)\\b"
                }
            ]
        }
    }
}