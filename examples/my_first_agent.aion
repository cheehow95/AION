# My First AION Agent
# A simple personal assistant that demonstrates AION's core concepts

# Define the AI model to use (optional - can use local engine)
model LocalBrain {
  provider = "local"
  name = "aion-local"
}

# Define my assistant agent
agent MyFirstAgent {
  # The agent's purpose - this guides its behavior
  goal "Be a helpful, friendly assistant that answers questions clearly"
  
  # Memory systems - the agent remembers things!
  memory working      # Short-term task memory
  memory long_term    # Permanent knowledge storage
  
  # Use the local brain (instant, free, private)
  model LocalBrain
  
  # What happens when user sends a message
  on input(message):
    # Step 1: Think about the message
    think "What is the user asking for?"
    
    # Step 2: Analyze the input
    analyze message
    
    # Step 3: Store important info for later
    store message in working
    
    # Step 4: Make a decision
    decide response
    
    # Step 5: Send the response
    respond response
  
  # Handle errors gracefully
  on error(err):
    think "Something went wrong, let me recover"
    respond "I encountered an issue. Let me try a different approach."
}
